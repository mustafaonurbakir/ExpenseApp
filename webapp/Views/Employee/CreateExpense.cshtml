@model ExpenseApplication.Data.Expense

@{
    ViewBag.Title = "CreateExpense";
}

<div id="content" ng-app="crudModule" ng-controller="crudController" >
    
    <div class="row" >
        
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-calendar fa-fw "></i> 
                Expenses
                <span>
                    >
                    Create Expense
                </span>
            </h1>
        </div>
    </div>
    

    <div class="row" >
        <div @*class="col-sm-12 col-md-12 col-lg-3"*@>
          
                <div>
                    <div class="widget-body" style="padding-left: 15px; padding-right:25px;">
                        <!-- content goes here -->
                        
                        <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%" >
                            <thead> 
                                <tr>
                                    <th>Expense Type</th>
                                    <th>Expense Description</th>
                                    <th>Amount</th>
                                    <th>Date</th>
                                </tr> 
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in data.expenseitemdata">
                                    <td ><input class="form-control" id="title" name="title" maxlength="50" type="text" placeholder="Taxi, Dinner" ng-model="item.ExpenseType"></td>
                                    <td><textarea class="form-control" placeholder="Please be brief" rows="3" maxlength="40" id="description" ng-model="item.Description"></textarea></td>
                                    <td><input class="form-control" id="amount" name="title" maxlength="50" type="number" ng-model="item.Amount"></td>
                                    <td><input class="form-control" id="amount" name="title" maxlength="50" type="date" ng-model="item.ExpenseDate"></td>
                                </tr> 
                                
                            </tbody>

                        </table>
                        <table>
                            <tr>
                                <td>
                                    <button class="btn btn-default" type="button" id="add-event" ng-click="save()">
                                        Add Expense
                                    </button>
                                </td>
                                <td>
                                    <button class="btn btn-default" type="button" id="add-event" ng-click="saveform()">
                                        Complated
                                    </button>
                                </td>
                            </tr>
                        </table>
                        
                        <br />

                        

                    
                        
                        <!-- end content -->
                    </div>
                </div>
                <!-- end widget div -->
            
        </div>
      


    </div>

</div>

<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular-route.js"></script>
<script src="~/Scripts/MyScripts/Module.js"></script>
<script src="~/Scripts/MyScripts/Service.js"></script>
<script src="~/Scripts/MyScripts/Controller.js"></script>